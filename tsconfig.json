{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es6", "esnext"],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
